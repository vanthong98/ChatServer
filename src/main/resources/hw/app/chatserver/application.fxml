<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="500" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="hw.app.chatserver.HelloController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox>
        <HBox spacing="5" alignment="CENTER_RIGHT">
            <Label text="Port"/>
            <TextField prefWidth="75"/>
            <Button text="Start Server" />
        </HBox>
    </HBox>

    <HBox spacing="10">
        <VBox spacing="10" prefWidth="425">
            <TextArea fx:id="messageTextArea" prefHeight="350"/>
            <TextArea fx:id="userTextArea"/>
            <HBox alignment="CENTER_RIGHT">
                <Button text="Send message"/>
            </HBox>
        </VBox>
        <VBox spacing="10">
            <ListView/>
            <ListView/>
        </VBox>
    </HBox>
</VBox>
